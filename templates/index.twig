{% set seo = {title: "View Wifigle map", keywords:"Wifigle, map, visualize", description:"Visualize collected wifigle data"} %}

{% extends "_common.twig" %}

{% block head %}
<script src="http://api-maps.yandex.ru/2.0-stable/?load=package.full&lang=ru-RU" type="text/javascript"></script>
<script src="/js/URI.js" type="text/javascript"></script>
<script src="/js/index.js" type="text/javascript"></script>
{% endblock %}

{% block content %}
<nav class="navbar navbar-default">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Wifigle</a>
        <p class="navbar-text">Карта Wifi-сетей</p>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <div class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <input id="search" name="search" type="text" class="form-control" placeholder="Search">
            </div>
            <button id="btnSearch" name="btnSearch" type="submit" class="btn btn-default hidden-sm hidden-xs" title="Search">
                <span class="glyphicon glyphicon-search"></span>
            </button>
            <div class="btn-group" data-toggle="buttons">
                <label class="btn">
                    <input id="wps" name="wps" type="checkbox"> WPS
                </label>
                <label class="btn">
                    <input id="wep" name="wep"  type="checkbox"> WEP
                </label>
                <label class="btn">
                    <input id="wpa" name="wpa"  type="checkbox"> WPA
                </label>
                <label class="btn">
                    <input id="wpa2" name="wpa2" type="checkbox"> WPA2
                </label>
            </div>        
        </div>

<!--        <button type="button" class="btn btn-default navbar-btn btnFilter" title="Filter"><span class="glyphicon glyphicon-wrench"></span></button>   -->
        <button type="button" class="btn btn-default navbar-btn btnNearMe" title="Near me"><span class="glyphicon glyphicon-screenshot"></span></button>        
        <a href="/upload" class="btn btn-default navbar-btn btnUpload" title="Upload"><span class="glyphicon glyphicon-upload"></span></a>        
    </div>    
</nav>
<div id="map" class="map">
</div>
{% endblock %}

