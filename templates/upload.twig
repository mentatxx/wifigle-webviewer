{% set seo = {title: "Upload new data", keywords:"Wifigle, upload", description:"Upload new data"} %}

{% extends "_common.twig" %}

{% block head %}
<script src="/js/upload.js" type="text/javascript"></script>
{% endblock %}

{% block content %}
<nav class="navbar navbar-default">
    <div class="navbar-header">
        <a class="navbar-brand" href="/">Wifigle</a>
        <p class="navbar-text">Карта Wifi-сетей</p>
    </div>
</nav>
{% if success %}
<div class="container">
    <div class="row">
        <div class="alert alert-success">
          {{ success }}
        </div>
    </div>
</div>
{% endif %}
{%if error%}
<div class="container">
    <div class="row">
        <div class="alert alert-danger">
            {{ error }}
        </div>
    </div>
</div>
{%endif%}

<form action="/upload" method="POST" enctype="multipart/form-data">
    <div class="container">
        <div class="row">
            <h1>Upload</h1>
            <div class="col-lg-12 col-md-12 col-xs-12 col-sm-12">
                <div class="form-group">
                    <label for="fileSelector1">Select .KML file</label>
                    <input type="file" class="form-control" name="fileSelector" id="fileSelector1">
                </div>               
                <button type="submit" name="btnUpload" class="btn btn-primary">Upload</button>
            </div>
        </div>
    </div>
</form>

{%if debug%}
<h3>Debug</h3>
<pre>{{ debug }}</pre>
{%endif%}
{% endblock %}

